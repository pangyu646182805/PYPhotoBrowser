<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/y32"
    android:paddingLeft="@dimen/x32"
    android:paddingRight="@dimen/x32">

    <com.neurotech.photobrowser.widget.NoPaddingTextView
        android:id="@+id/tv_drug_name"
        android:layout_width="@dimen/x280"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray666"
        android:textSize="12sp"
        tools:text="苯甲酸钠"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x16"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.neurotech.photobrowser.widget.NoPaddingTextView
            android:id="@+id/tv_morning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/x16"
            android:textColor="@color/colorGray666"
            android:textSize="12sp"
            tools:text="15mg"/>

        <com.neurotech.photobrowser.widget.NoPaddingTextView
            android:id="@+id/tv_afternoon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/x16"
            android:textColor="@color/colorGray666"
            android:textSize="12sp"
            tools:text="5mg"/>

        <com.neurotech.photobrowser.widget.NoPaddingTextView
            android:id="@+id/tv_evening"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/x16"
            android:textColor="@color/colorGray666"
            android:textSize="12sp"
            tools:text="5mg"/>
    </LinearLayout>
</LinearLayout>